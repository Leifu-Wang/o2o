<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hust.o2o.dao.AreaDAO">
    <select id="list" resultType="com.hust.o2o.model.Area">
        SELECT area_id, area_name, priority, create_time, update_time
        FROM tb_area
        ORDER BY priority DESC
    </select>

    <select id="getByName" resultType="com.hust.o2o.model.Area">
        SELECT *
        FROM tb_area
        WHERE area_name = #{areaName}
    </select>
</mapper>