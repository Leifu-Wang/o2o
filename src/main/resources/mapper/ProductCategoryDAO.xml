<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hust.o2o.dao.ProductCategoryDAO">
    <sql id="table">tb_product_category</sql>
    <sql id="insertFields">product_category_name, priority, create_time, shop_id</sql>
    <sql id="selectFields">product_category_id, product_category_name, priority, create_time, shop_id</sql>


    <select id="queryProductCategory" resultType="com.hust.o2o.model.ProductCategory"
    parameterType="Long">
        SELECT
        <include refid="selectFields"/>
        FROM
        <include refid="table"/>
        WHERE
        shop_id = #{shopId}
        ORDER BY
        priority
        DESC
    </select>

    <insert id="batchInsertProductCategory" parameterType="list">
        INSERT INTO
        <include refid="table"/>
        (<include refid="insertFields"/>)
        VALUES
        <foreach collection="list" item="productCategory" index="index" separator=",">
            (
            #{productCategory.productCategoryName},
            #{productCategory.priority},
            #{productCategory.createTime},
            #{productCategory.shopId}
            )
        </foreach>
    </insert>

    <delete id="deleteProductCategory">
        DELETE FROM
        <include refid="table"/>
        WHERE
        shop_id = #{shopId}
        AND
        product_category_id = #{productCategoryId}
    </delete>
</mapper>